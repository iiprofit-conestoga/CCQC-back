{
  "compilerOptions": {
    "target": "es2016",                    // Transpile to ES6
    "module": "commonjs",                  // Use CommonJS modules
    "baseUrl": "./",                       // Base directory for relative paths
    "paths": {
      "*": ["node_modules/*"]             // Ensure TypeScript knows where to find node modules
    },
    "outDir": "./build",                   // Specify the output directory for compiled files
    "rootDir": "./src",                    // Specify the root directory of your source files
    "esModuleInterop": true,               // Enable interoperability between CommonJS and ES modules
    "forceConsistentCasingInFileNames": true,
    "strict": true,                        // Enable strict type-checking options
    "skipLibCheck": true,                  // Skip type checking of declaration files for faster build
    "resolveJsonModule": true,             // Allow importing JSON modules
    "declaration": true,                   // Generate .d.ts declaration files
    "sourceMap": true                      // Generate source maps for debugging
  },
  "include": [
    "src/**/*"                             // Include all files in the src directory
  ],
  "exclude": [
    "node_modules"                         // Exclude node_modules from compilation
  ]
}